{
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": ".",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/en",
      "destination": "/?lang=en",
      "permanent": true
    },
    {
      "source": "/en/",
      "destination": "/?lang=en",
      "permanent": true
    },
    {
      "source": "/ja",
      "destination": "/?lang=ja",
      "permanent": true
    },
    {
      "source": "/ja/",
      "destination": "/?lang=ja",
      "permanent": true
    },
    {
      "source": "/zh",
      "destination": "/?lang=zh",
      "permanent": true
    },
    {
      "source": "/zh/",
      "destination": "/?lang=zh",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Robots-Tag",
          "value": "all"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
